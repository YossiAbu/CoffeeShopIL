@model ShoppingCartMVC.Models.getOrders

<div style="margin-left:20px">
    @using (Html.BeginForm())
    {
        <span>Invoice ID:</span>
        <br />
        @Html.DisplayFor(model => Model.InvoiceId)
        <br />
        <br />
        <span>User ID:</span>
        <br />
        @Html.DisplayFor(model => Model.userId)
        <br />
        <br />

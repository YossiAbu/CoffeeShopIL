<div class="container">
    <h2>View Tables</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Table Number</th>
                <th>Number Of Sits</th>
                <th>Area</th>
                @*<th>Inside/Outside<input style="background-color:red;" type="checkbox" value="Inside" id="checkBox" onclick="ShowTablesForArea()" /></th>*@
            </tr>
        </thead>
        <tbody id="myTable">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.tableId</td>
                    <td>@item.numSeats</td>
                    <td>@item.area</td>
                    <td>
                        <a href="@Url.Action("Edit", "Table", new { id = item.tableId})" class="btn btn-info">Edit Table</a>
                        <a href="@Url.Action("Delete", "Table", new { id = item.tableId})" class="btn btn-danger">Delete Table</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>